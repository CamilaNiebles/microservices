{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@services/*":["src/services/*"],
      "@controllers/*":["src/controllers/*"],
      "@config/*":["src/config/*"],
      "@entities/*":["src/models/entities/*"]
    }
  }
}
